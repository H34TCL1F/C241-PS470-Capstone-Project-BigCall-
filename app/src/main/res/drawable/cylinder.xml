<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cylinder base -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#50FFFFFF"/> <!-- 50% transparent white color -->
        </shape>
    </item>
    <!-- Cylinder body -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="15dp"
        android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF"/> <!-- 50% transparent white color -->
        </shape>
    </item>
    <!-- Cylinder top -->

</layer-list>
